<p id="notice"><%= notice %></p>

<h1>Listing Mincroposts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mincroposts.each do |mincropost| %>
      <tr>
        <td><%= mincropost.content %></td>
        <td><%= mincropost.user_id %></td>
        <td><%= link_to 'Show', mincropost %></td>
        <td><%= link_to 'Edit', edit_mincropost_path(mincropost) %></td>
        <td><%= link_to 'Destroy', mincropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

